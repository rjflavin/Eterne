{% schema %}
{
  "name": "Recently viewed products",
  "class": "section-recent-products-slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "RECENTLY VIEWED"
    },
    {
      "type": "text",
      "id": "add_to_cart_text",
      "label": "Add item to cart text",
      "default": "Add to bag"
    }
  ],
  "presets": [
    {
      "name": "Recent products"
    }
  ]
}
{% endschema %}
