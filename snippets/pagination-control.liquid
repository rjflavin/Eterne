{% if paginate.pages > 1 %}
  <div class="pagination">
    {% if paginate.previous %}
      <a class="pagination__prev pagination__link text-current underline underline--on-hover" href="{{ paginate.previous.url }}">Previous</a>
      <span class="pagination__sep"></span>
    {% endif %}

    {% for part in paginate.parts %}
      <span class="pagination__number{% if paginate.current_page == part.title %} underline underline--not-link{% endif %}">
        {%- if part.is_link -%}
          <a class="pagination__link text-current underline underline--on-hover" href="{{ part.url }}">{{ part.title }}</a>
        {%- else -%}
          {{- part.title -}}
        {%- endif -%}
      </span>
    {% endfor %}

    {% if paginate.next %}
      <span class="pagination__sep"></span>
      <a class="pagination__next pagination__link text-current underline underline--on-hover" href="{{ paginate.next.url }}">Next</a>
    {% endif %}
  </div>
{% endif %}
